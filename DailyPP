4. MEAN AND MEDIAN PROBLEM >- 
class Solution {
    public int mean(int[] arr) {
        // code here
        int avg = 0 ; 
        for(int ele :arr){
            avg += ele ; 
        }
        
        return avg/arr.length ; 
    }
    public int median(int[] arr) {
        
        // code here
        Arrays.sort(arr);
        
        if(arr.length%2==1){
            return arr[arr.length/2];
        }
        
        return (arr[(arr.length/2) -1 ]+arr[arr.length/2])/2 ;
    }
}

