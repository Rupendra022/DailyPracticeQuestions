class Solution {
    public int[] helper(int[] nums) {
        int[] res = new int[nums.length - 1];

        for (int i = 0; i < nums.length - 1; i++) {
            res[i] = (nums[i] + nums[i + 1]) % 10;
        }

        return res;
    }

    public int triangularSum(int[] nums) {
        if (nums.length == 1)
            return nums[0];
        while (nums.length > 1) {
            nums = helper(nums);
        }

        return nums[0];
    }
}
